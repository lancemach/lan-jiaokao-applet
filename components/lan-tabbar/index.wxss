/* components/lan-tabbar/index.wxss */
.tab-bar {
  position: fixed;
  z-index: 99;
  bottom: 0px;
  left: 0px;
  right: 0px;
  width: 100%;
  height: 128rpx;
  background: white;
  display: flex;
  flex-direction: row;
  /* border-top: 1rpx solid #e4e4e4; */
  /*兼容 IOS<11.2*/
  padding-bottom: constant(safe-area-inset-bottom); 
  /*兼容 IOS>11.2*/
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -1rpx 1rpx rgba(0, 0, 0, .06);
  
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx 0 10rpx;
  font-size: 26rpx;
}

.tab-bar-text {
  padding-top: 4rpx;
}