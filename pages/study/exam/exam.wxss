/* pages/study/exam/exam.wxss */
@import '../../../components/common/style/hairline.wxss';
page {
    --default-border-color: #f2f2f2;
}
.control-count-down {
    margin-left: 10rpx;
}
.control-count-down .van-count-down {
    font-size: 32rpx;
}
.tabbar-box {
    width: 100%;
    height: 100rpx;
}
.tabbar-unfold {
    position: relative;
}
.tabbar-unfold::before {
    position: fixed;
    content: '';
    height: 100vh;
    width: 100vw;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background-color: rgba(0, 0, 0, .6);
}
.tabbar-box .item {
    margin-right: 30rpx;
}
.collect .text {
    margin-left: 10rpx;
    font-size: 26rpx;
}
.item .text {
    padding-left: 6rpx;
}
.tabbar-box .library {
    margin: 0;
}
.library .text {
    padding: 0 6rpx;
}
.library-icon {
    margin-right: 10rpx;
}
.avatar, .avatar .image{
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    margin: 0 auto;
    overflow: hidden;
}
.user-info {
    text-align: center;
}
.user-info .name {
    margin: 25rpx 0 100rpx;
}
.exam-info {
    padding-bottom: 90rpx;    
}
.exam-info .list {
    margin-bottom: 20rpx;
    font-size: 30rpx;
}
.exam-info .text {
    margin-left: 36rpx;
}
.btn-box .tips {
    text-align: center;
    font-size: 24rpx;
    color: #d2d2d2;
    margin-bottom: 15rpx;
}
.popup-box {
    padding: 68rpx 45rpx 45rpx;
    border-radius: 10rpx;
    width: 78%;
}
.popup-box .title {
    margin-bottom: 45rpx;
    font-size: 40rpx;
    text-align: center;
}
.pop-btn-box {
    padding: 50rpx 0 30rpx;
    width: 420rpx;
    margin: 0 auto;
}
.pop-btn-box .pop-btn {
    width: 200rpx;
    height: 80rpx;
    font-weight: normal;
}
.pop-btn-box .pop-btn.max-btn {
    width: 320rpx;
}
.pop-btn-box .pop-btn.gray {
    color: #c2c2c2;
}
.exam-wrap {
    width: 100%;
    height: 100%;
}
.exam-box {
    font-size: 38rpx;
    padding: 50rpx 40rpx;
}
.exam-box .images {
    width: 100%;
    height: 300rpx;
    margin-top: 35rpx;
}
.exam-box .option {
    margin-top: 45rpx;
}
.exam-box .option .item {
    margin-bottom: 36rpx;
}
.circle-box .hide {
    opacity: 0;
}
.exam-box .option .item {
    width: 100%;
}
.exam-box .option .bullets {
    font-size: 32rpx;
    width: 50rpx;
    height: 50rpx;
    line-height: 48rpx;
    text-align: center;
    margin-right: 18rpx;
    position: relative;
    top: 6rpx;
    background-color: #fefefe;
    border-radius: 50%;
    border: 1px solid #d2d2d2;
}
.exam-box .option .bullets.selected {
    border-color: transparent;
}
.exam-box .option .text {
    width: calc( 100% - 84rpx);
}
.chapter {
    font-size: 28rpx;
    background-color: #F4F7F7;
}
.sequence-box {
    height: 84%;
    overflow-y: auto;
    padding: 25rpx 0 0;
}
.sequence {
    padding: 0 10rpx;
}
.sequence .item {
    margin: 24rpx 0 0 36rpx;
    width: 76rpx;
    height: 76rpx;
    line-height: 76rpx;
    font-size: 30rpx;
    text-align: center;
    border-radius: 50%;
    border: solid 1px #e2e2e2;
}
.sequence .item.min {
    font-size: 26rpx;
}

.solving-problems {
    padding: 30rpx 0;
}
.solving-problems .answer {
    padding: 25rpx 35rpx;
    background-color: #f6f6f6;
    border-radius: 6rpx;
    margin-bottom: 50rpx;
    color: #fff;
}
.solving-problems .bar {
    height: 12rpx;
    margin: 0 -40rpx;
    background: #f2f2f2;
}
.solving-problems .detailed {
    padding: 40rpx 0;
}
.solving-problems .detailed .main-title {
    font-size: 40rpx;
    text-align: center;
}
.solving-problems .item-box .title {
    height: 40rpx;
    line-height: 40rpx;
    position: relative;
    font-size: 32rpx;
}
.solving-problems .item-box .title, .solving-problems .item-box .info {
    padding-left: 30rpx;
}
.solving-problems .item-box .title .bar {
    position: absolute;
    left: 40rpx;
    top: 2rpx;
    height: 36rpx;
    width: 10rpx;
    border-radius: 10rpx;
}
.solving-problems .skill .info {
    position: relative;
    z-index: 2;
}
.solving-problems .skill .info:not(.vip):after {
    position: absolute;
    z-index: 5;
    content: '';
    right: 0;
    top: 0;
    left: -10%;
    height: 100%;
    background-image: linear-gradient(to left, #fff 40%, transparent);
}
.solving-problems .item-box .info {
    padding-top: 40rpx;
    padding-bottom: 60rpx;
}
.solving-problems .vip-btn {
    position: absolute;
    z-index: 6;
    top: 50%;
    height: 50rpx;
    line-height: 50rpx;
    right: 35rpx;
    margin-top: -30rpx;
    
}
.solving-problems .vip-btn .icon {
    position: relative;
    top: 2rpx;
}
.solving-problems .vip-btn, .solving-problems .vip-icon {
    font-size: 28rpx;
    padding: 0 15rpx 0 24rpx;
    border-radius: 50rpx;
    color: #504421;
    background-image: linear-gradient(to right, #F8F5E2, #E9E2BC);
}
.solving-problems .vip-icon {
    display: inline-block;
    width: auto;
    padding: 0 22rpx;
    margin-right: 12rpx;
    line-height: 180%;
}
.solving-problems .item-box .info {
    line-height: 165%;
}
.confirm-answer-btn {
    width: 98% !important;
    margin-top: 36rpx;
}