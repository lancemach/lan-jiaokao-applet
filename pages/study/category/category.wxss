@import '../../../components/common/style/hairline.wxss';
.list-box {
    padding-top: 18rpx;
}
.list-box .box .title {
    font-size: 30rpx;
    padding: 10rpx 0;
}
.list-box .box .title .icon {
    margin-right: 10rpx;
}
.list-box .box .item-box .item {
    padding: 20rpx 0 14rpx;
}
.list-box .box .item .title {
    font-size: 32rpx;
}
.list-box .box .item .num {
    width: 34rpx;
    height: 34rpx;
    line-height: 32rpx;
    margin-right: 12rpx;
    text-align: center;
    border-radius: 50%;
    font-size: 26rpx;
    color: #fff;
    overflow: hidden;
}
