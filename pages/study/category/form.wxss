/* pages/study/category/form.wxss */
.bg, .pentagon-big, .pentagon-min, .trilateral {
    position: absolute;
}
.bg {
    z-index: -1;
    top: 0;
    right: 0;
    left: 0;
    background-color: #fff;
    height: 14%;
}
.pentagon-big, .pentagon-min {
    opacity: .6;
}
.trilateral {
    width: 100%;
    height: 26rpx;
    right: 0;
    top: -24rpx;
}
.trilateral.opacity {
    height: 38rpx;
    top: -38rpx;
    opacity: .35;
}
.pentagon-big {
    width: 148rpx;
    height: 136rpx;
    top: 48%;
    right: 12%;
}
.pentagon-min {
    width: 86rpx;
    height: 74rpx;
    top: 32%;
    right: 30%;
}
.container {
    background: none;
}
.header-left, .tips {
    color: #fff;
}
.header-left .title {
    font-size: 36rpx;
}
.tips {
    position: relative;
    top: -16rpx;
    font-size: 24rpx;
    color: rgba(255, 255, 255, .8);
}
.tips .text {
    margin-left: 6rpx;
}
.lan-cell-group {
    position: relative;
    padding-top: 16rpx;
}
.lan-cell-group.van-cell-group::after {
    border: none;
}
.driving-licence .box {
    text-align: center;
    padding: 10rpx;
    border-radius: 5rpx;
    overflow: hidden;
    position: relative;
    transition: all .25s ease-in-out;
}
.driving-licence .box .checked {
    position: absolute;
    right: 0;
    top: 0;
    width: 32rpx;
    height: 32rpx;
    opacity: .9;
}
.driving-licence .box .name {
    font-size: 30rpx;
}
.driving-licence .box .text {
    font-size: 24rpx;
}