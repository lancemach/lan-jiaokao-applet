/* pages/mine/card/index.wxss */
.cards-box {
    position: relative;
    z-index: 0;
    margin-bottom: 25rpx;
    height: 210rpx;
    color: rgba(255, 255, 255, .7);
    overflow: hidden;
}

.cards-box::before, .cards-box::after {
    position: absolute;
    z-index: 1;
    content: '';
    border-radius: 50%;
    background-color: rgba(255, 255, 255, .04);
    overflow: hidden;
}
