.cards-box.learn {
    background: linear-gradient(105deg, #57C569 0, #40BB54 100%);
}
.cards-box.usage {
    background: linear-gradient(105deg, #5B5861 0, #2A292D 100%);
}

.cards-box .cards {
    position: absolute;
    z-index: 3;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 30rpx;
    box-sizing: border-box;
}
.cards .vip-icon {
    position: absolute;
    z-index: 2;
    right: -30rpx;
    bottom: -70rpx;
}
.cards .h2, .cards .number {
    font-size: 34rpx;
}
.cards .time {
    font-size: 28rpx;
}
.cards .h4 {
    font-size: 26rpx;
}
.cards .number {
    margin-top: 24rpx;
}